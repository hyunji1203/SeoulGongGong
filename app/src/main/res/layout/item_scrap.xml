<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_default">

        <ImageView
            android:id="@+id/iv_scrap_item_icon"
            android:layout_width="115dp"
            android:layout_height="115dp"
            app:tint="#80000000"
            android:tintMode="src_over"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_basketball" />

        <TextView
            android:id="@+id/tv_scrap_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="@style/title_3B"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/iv_scrap_item_icon"
            app:layout_constraintEnd_toEndOf="@+id/iv_scrap_item_icon"
            app:layout_constraintStart_toStartOf="@+id/iv_scrap_item_icon"
            app:layout_constraintTop_toTopOf="@+id/iv_scrap_item_icon"
            tools:text="송파\n청소년\n수련센터" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>